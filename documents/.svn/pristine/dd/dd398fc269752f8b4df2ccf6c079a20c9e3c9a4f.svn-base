* {
    padding: 0;
    margin: 0;
}

#city-select .country {
    position: relative;
    float: left;
    width: 88px;
    height: auto;
    margin-right: 10px;
    border: 1px solid #c2cad8;
    border-radius: 4px;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .07);
    cursor: pointer;
}

#city-select .country .icon-pull-down, #city-select .ssq-select .icon-pull-down {
    position: absolute;
    top: 10px;
    right: 8px;
    width: 10px;
    height: 5px;
    /*background: url("/images/common/icon-pull-down.png") -10px -25px no-repeat;*/
}

#city-select .open .country-content {
    display: block !important;
}

#city-select .country a {
    display: block;
    padding: 6px;
    text-decoration: none;
    color: #333;
    font-size: 12px;
}

#city-select .country .country-content {
    position: absolute;
    top: 27px;
    left: -1px;
    z-index: 6;
    display: none;
    width: inherit;
}

#city-select .country .country-content ul {
    list-style-type: none;
    border: 1px solid #cccccc;
}

#city-select .country .country-content li a {
    padding: 4px 5px;
    background-color: #fff;
}

#city-select .country .country-content li a.selected {
    background-color: #fff8f3;
    color: #ff6600;
}

#city-select .country .country-content li a:hover {
    background-color: #fff8f3;
}

#city-select .ssq-select {
    position: relative;
    float: left;
    width: 300px;
    height: auto;
}

#city-select .ssq-select .city-title {
    display: block;
    padding: 6px;
    border: 1px solid #c2cad8;
    border-radius: 4px;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .07);
    text-decoration: none;
    color: #333;
    font-size: 12px;
    cursor: pointer;
}

#city-select .ssq-select .cities-overlay {
    position: absolute;
    top: 29px;
    left: 0px;
    z-index: 6;
    width: inherit;
    display: none;
    padding-bottom: 10px;
}

#city-select .ssq-select .open {
    display: block !important;
}

#city-select .ssq-select .cities-overlay .city-select-tab {
    width: 100%;
    border-right: 1px solid #ccc;
    overflow: hidden;
    background: #f0f0f0;
}

#city-select .ssq-select .cities-overlay .city-select-tab a {
    float: left;
    display: block;
    width: 25%;
    padding: 8px 0;
    color: #4D4D4D;
    border-left: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    text-decoration: none;
    text-align: center;
    font-size: 12px;
    cursor: pointer;
}

#city-select .ssq-select .cities-overlay .city-select-tab a.current {
    background: #fff;
    border-bottom: 1px solid #fff;
    color: #f60;
}

#city-select .ssq-select .cities-overlay .city-select-tab a.tw-dist {
    width: 50% !important;
}

#city-select .ssq-select .cities-overlay .city-select-content {
    border: 1px #ccc solid;
    border-top: 0;
    padding: 10px 15px;
    background: #fff;
    font-size: 12px;
}

#city-select .ssq-select .cities-overlay .city-select-content .city-select-city {
    display: none;
    margin-bottom: 0 !important;
}

#city-select .ssq-select .cities-overlay .city-select-content .city-select-city:nth-child(1) {
    display: block;
}

#city-select .ssq-select .cities-overlay .city-select-content .city-select-city a {
    display: inline-block;
    color: #4D4D4D;
    padding: 4px 10px;
    outline: 0;
    text-decoration: none;
    white-space: nowrap;
}

#city-select .ssq-select .cities-overlay .city-select-content .city-select-city a:hover {
    color: #ff6600;
    background-color: #fff8f3;
}

#city-select .ssq-select .cities-overlay .city-select-content .city-select-city a.current {
    background-color: #f60;
    color: #fff;
    border-radius: 2px;
}

#city-select .ssq-select .cities-overlay .city-select-content-2 {
    border: 1px #ccc solid;
    border-top: 0;
    background: #fff;
    font-size: 12px;
}

#city-select .ssq-select .cities-overlay .city-select-content-2 .city-select-box {
    height: 300px;
    overflow-x: hidden;
    overflow-y: scroll;
    margin-bottom: 0 !important;
}

#city-select .ssq-select .cities-overlay .city-select-content-2 .city-select-box a {
    display: block;
    padding: 5px 10px;
    text-decoration: none;
    color: #4D4D4D;
    cursor: pointer;
}

#city-select .ssq-select .cities-overlay .city-select-content-2 .city-select-box a:hover {
    background-color: #fff8f3;
}

#city-select .ssq-select .cities-overlay .city-select-content-2 .city-select-box a.selected {
    color: #ff6600;
}
