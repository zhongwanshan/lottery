<script src="/lottery/js/jquery-1.8.2.js" type="text/javascript"
	charset="utf-8"></script>
<script src="/lottery/js/layer/layer.min.js" type="text/javascript"
	charset="utf-8"></script>

</head>
<body>
	<div id="searchCondition"
		style="height: 158px; border: 1px solid #BDBFBE; background-color: #F2F2F2">
		<div>
			<span>查询条件</span>
		</div>
		<ul>
		

			<li>传统足球期数号：<select>
					<option value="0">全部</option>
					<option th:each="list:${betFbLotteryList}" th:value="${list.num}"
						th:text="${list.num}"></option>
			</select>
			</li>
			<li><span onclick="searchMeassages(0)">查询</span> <span onclick="add()">新增</span></li>
		</ul>
	</div>
	<div
		style="border: 1px solid #BDBFBE; margin-top: 13px; height: 1000px;">
		<div id="messageLlist"  style="overflow-x: scroll; width: 1000px;">
			<table id="messageData" style="border-collapse: collapse; width: 1860px; table-layout: fixed;">
				<thead>
				    <td>操作</td>
					<td>传统足球期数号</td>
					<td>开奖号</td>
					<td>本期开售时间</td>
					<td>本期停售时间</td>
					<td>本期开奖时间</td>
					<td>一等奖注数</td>				
					<td>一等奖金额(元)</td>
					<td>二等奖注数</td>
					<td>二等奖金额(元)</td>
					<td>创建录入时间</td>
					<td>修改时间</td>
					
				</thead>
				<tbody>
					<tr th:each="entries,stat:${dataList}">
					    <td th:attr="idValue=${entries['id']}"><span>编辑</span><span>查看</span></td>
						<td th:text="${entries['num']}"></td>
						<td th:text="${entries['prizeNumbers']}"></td>
						<td th:text="${entries['beginSaleTimeTow']}"></td>
						<td th:text="${entries['stopTimeTow']}"></td>
						<td th:text="${entries['openTimeTow']}"></td>
						<td th:text="${entries['prize1Num']}"></td>
						<td th:text="${entries['prize1Money']}"></td>
						<td th:text="${entries['prize2Num']}"></td>
						<td th:text="${entries['prize2Money']}"></td>
						<td th:text="${entries['createTimeTow']}"></td>
						<td th:text="${entries['upateTimeTow']}"></td>
					</tr>
				</tbody>
			</table>
		</div>
		<div id="pageLimit">
			<span>首页</span> <span>前页</span> <span>后页</span> <span>尾页</span> <span>第<b>1</b>页
			</span> <span>共<b>[[${totallNum}]]</b>页
			</span> <span> 到第<input type="text">页
			</span> <span>Go</span>
		</div>
	</div>
	<script type="text/javascript">
	Date.prototype.format = function (format) {
        var args = {
            "M+": this.getMonth() + 1,
            "d+": this.getDate(),
            "h+": this.getHours(),
            "m+": this.getMinutes(),
            "s+": this.getSeconds(),
            "q+": Math.floor((this.getMonth() + 3) / 3),  //quarter
            "S": this.getMilliseconds()
        };
        if (/(y+)/.test(format))
            format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var i in args) {
            var n = args[i];
            if (new RegExp("(" + i + ")").test(format))
                format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? n : ("00" + n).substr(("" + n).length));
        }
        return format;
    };
	
	
	$(function(){
		init();
	})
	 //重置
	  function reSet(){
	  $("#searchCondition ul li input").val("");
	  $("#searchCondition ul li:nth-child(3) select").val("0")
	   $("#searchCondition ul li:nth-child(4) select").val("0")	 	   
	  }
	   //根据条件查询信息
		function searchMeassages(pageNum) {
			var num = $("#searchCondition ul li:nth-child(1) select option:selected").val();
			$.ajax({
				type : "GET",
				url : "/lottery/betFbLotteryPrize/searchBetFbLotteryPrize",
				data : {
					"num" : num,
					"pageNum" : parseInt(pageNum)*10
				},
				dataType : "json",
				success : function(data) {
					if(parseInt(pageNum)==0){
					     $("#pageLimit span:nth-child(5) b").text("1");
						}
					//改变页数
					$("#pageLimit span:nth-child(6) b").text(data.totallNum)
					$('#messageLlist #messageData tbody').empty();
					var html = "";
					for (var i = 0, l = data.dataList.length; i < l; i++) {
						html += "<tr>";
						html += "<td idValue="+data.dataList[i]['id'] +"><span>编辑</span><span>查看</span></td>";
						if(null==data.dataList[i]['num']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['num'] + "</td>";
						}
						if(null==data.dataList[i]['prizeNumbers']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['prizeNumbers'] + "</td>";
						}
						if(null==data.dataList[i]['beginSaleTimeTow']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['beginSaleTimeTow'] + "</td>";
						}
						if(null==data.dataList[i]['stopTimeTow']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['stopTimeTow'] + "</td>";
						}
						if(null==data.dataList[i]['openTimeTow']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['openTimeTow'] + "</td>";
						}
						if(null==data.dataList[i]['prize1Num']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['prize1Num'] + "</td>";
						}
						if(null==data.dataList[i]['prize1Money']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['prize1Money'] + "</td>";
						}
						if(null==data.dataList[i]['prize2Num']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['prize2Num'] + "</td>";
						}
						if(null==data.dataList[i]['prize2Money']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['prize2Money'] + "</td>";
						}
						if(null==data.dataList[i]['createTimeTow']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['createTimeTow'] + "</td>";
						}
						if(null==data.dataList[i]['upateTimeTow']){
							html += "<td></td>";
						}else{
							html += "<td>" + data.dataList[i]['upateTimeTow'] + "</td>";
						}
						html += "</tr>";
					}

					$('#messageLlist #messageData tbody').html(html);
					init() 
				}
			});

		}　
	   //翻页跳转
	   $("#pageLimit span").click(function(){
		 var textValue =$(this).text();
		 var currentPageNum = $("#pageLimit span:nth-child(5) b").text();
		 var totallPageNum = $("#pageLimit span:nth-child(6) b").text();
		 if(textValue=='首页'){
			 searchMeassages(0);
			 $("#pageLimit span:nth-child(5) b").text(1)
		 }else if(textValue=='前页'){
		   if(currentPageNum!=1){
			   searchMeassages(parseInt(currentPageNum)-2);
			   $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)-1)
		   }		 	 
		 }else if(textValue=='后页'){
			 if(currentPageNum!=totallPageNum){
			 searchMeassages(currentPageNum)
			 $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)+1)
			 }
			 
		 }else if(textValue=='尾页'){
			 if(totallPageNum!=1&&totallPageNum!=currentPageNum){
				 searchMeassages(totallPageNum-1)
				  $("#pageLimit span:nth-child(5) b").text(totallPageNum)
			 } 
		 }else if(textValue=='Go'){
			 var searchNum = $("#pageLimit span:nth-child(7) input").val();
			 if(searchNum!=currentPageNum&&searchNum!=""&&parseInt(searchNum)<=parseInt(totallPageNum)){
				 searchMeassages(parseInt(searchNum)-1);
				$("#pageLimit span:nth-child(5) b").text(searchNum)
			 }
		 }
	   });
 
function init() {
  //查看，编辑，作废，有效
 $("#messageLlist table tbody tr td span").click(function(){
	 var textValue =$(this).parent().attr("idValue");
	 if($(this).text()=="编辑"){
		 $.layer({
			 type: 2,
			 title: ["", true],
			 fix: true,
			 end:function(){searchMeassages(0)},
			 move: false,
			 maxmin: true,
			 shadeClose: false,
			 shade: [0.1, '#000', true],
			 border: [1, 0.8, '#fff', true],
			 offset: [($(window).height() - 100) / 2 + 'px', ''], 
			 offset: [30+ 'px', ''],
			 area: [650+ 'px', 630 + 'px'],
			 iframe: { src: "/lottery/betFbLotteryPrize/updateBetFbLotteryPrizePath?id="+textValue}
		 }); 
	 }else 	 if($(this).text()=="查看"){
		 $.layer({
			 type: 2,
			 title: ["", true],
			 fix: true,
			 end:function(){searchMeassages(0)},
			 move: false,
			 maxmin: true,
			 shadeClose: false,
			 shade: [0.1, '#000', true],
			 border: [1, 0.8, '#fff', true],
			 offset: [($(window).height() - 100) / 2 + 'px', ''], 
			 offset: [30+ 'px', ''],
			 area: [450+ 'px', 390 + 'px'],
			 iframe: { src: "/lottery/betFbLotteryPrize/betFbLotteryPrizeDetailPath?id="+textValue}
		 }); 
	 }  
 })
} 



function add(){
	 $.layer({
		 type: 2,
		 title: ["", true],
		 fix: true,
		 end:function(){searchMeassages(0)},
		 move: false,
		 maxmin: true,
		 shadeClose: false,
		 shade: [0.1, '#000', true],
		 border: [1, 0.8, '#fff', true],
		 offset: [($(window).height() - 100) / 2 + 'px', ''], 
		 offset: [30+ 'px', ''],
		 area: [650+ 'px', 630 + 'px'],
		 iframe: { src: "/lottery/betFbLotteryPrize/addBetFbLotteryPrizePath"}
	 }); 
}
  
	</script>
</body>
</html>