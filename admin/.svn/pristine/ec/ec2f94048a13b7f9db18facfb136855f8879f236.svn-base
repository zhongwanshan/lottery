<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>页面管理</title>
<style type="text/css">
/*初始化页面  */
body, ol, ul, h1, h2, h3, h4, h5, h6, p, th, td, dl, dd, form, fieldset,
	legend, input, textarea, select {
	margin: 0;
	padding: 0
}

body {
	font: 12px "宋体", "Arial Narrow", HELVETICA;
	background: #fff;
	-webkit-text-size-adjust: 100%;
}

a {
	color: #2d374b;
	text-decoration: none
}

a:hover {
	color: #cd0200;
	text-decoration: underline
}

em {
	font-style: normal
}

li {
	list-style: none
}

img {
	border: 0;
	vertical-align: middle
}

table {
	border-collapse: collapse;
	border-spacing: 0
}

p {
	word-wrap: break-word
}
/* 页面css*/
#searchCondition ul li {
	float: left;
	margin-left: 29px;
	margin-top: 35px;
	font-size: 13px;
}

#searchCondition ul li select {
	display: inline-block;
	width: 143px;
	height: 26px
}

#searchCondition ul li input {
	display: inline-block;
	width: 143px;
	height: 22px
}

#searchCondition ul li input#cx {
	display: inline-block;
	width: 143px;
	height: 26px
}

#pageManagerLlist {
	clear: both;
	margin-left: 29px;
	padding-top: 15px;
}

#pageManagerLlist #pageManagerData td {
	display: inline-block;
	width: 150px;
	text-align: center;
	line-height: 40px;
	border: none;
	border-bottom: 1px;
}

#pageManagerLlist #pageManagerData td:first-child {
	width: 50px;
}

#pageManagerLlist #pageManagerData thead td {
	background-color: #F2F2F2;
}

#pageManagerLlist #pageManagerData tbody tr {
	border-bottom-style: solid;
	border-bottom-width: 1px;
	border-bottom-color: #E7E7E7;
	border-left-style: solid;
	border-left-width: 1px;
	border-left-color: #E7E7E7;
	border-right-style: solid;
	border-right-width: 1px;
	border-right-color: #E7E7E7;
}

#pageManagerLlist #pageManagerData thead tr {
	border-bottom-style: solid;
	border-bottom-width: 1px;
	border-bottom-color: #E7E7E7;
	border-right-style: solid;
	border-right-width: 1px;
	border-right-color: #E7E7E7;
	border-left-style: solid;
	border-left-width: 1px;
	border-left-color: #E7E7E7;
}

#pageManagerLlist #pageManagerData tbody tr:hover {
	background-color: #F2F2F2;
}

#funtionList {
	height: 30px;
	width: 100%;
	clear: both;
	margin-top: 10px;
}

#funtionList ul li {
	float: left;
	display: inline-block;
	height: 30px;
	width: 80px;
	line-height: 30px;
	border: 1px solid #c3adad;
	border-radius: 3px;
	margin-left: 30px;
	text-align: center;
}

#funtionList ul {
	padding-top: 20px;
}

#funtionList ul li:hover {
	cursor: pointer;
}

#funtionList ul li:active {
	background-color: #c3adad;
}

#pageLimit span {
	float: left;
	display: inline-block;
	height: 20px;
	width: 47px;
	line-height: 20px;
	text-align: center;
}

#pageLimit span:hover {
	cursor: pointer;
}

#pageLimit span:active {
	background-color: #c3adad;
}

#pageLimit {
	margin-left: 250px;
	margin-top: 20px;
}

#pageLimit span:nth-child(7) {
	width: 80px;
}

#pageLimit span:nth-child(7) input {
	width: 20px;
}

#pageLimit span:nth-child(8) {
	height: 25px;
	width: 50px;
	line-height: 25px;
	border: 1px solid #c3adad;
	border-radius: 3px;
}
/* #rightArea{
  position: absolute;
  left: 60px;
  top: 50px;
  background-color:rgba(255,255,255,0.5);
  background-color:filter: Alpha(Opacity=30);

} */
</style>

<script src="/lottery/js/jquery-1.8.2.js" type="text/javascript" charset="utf-8"></script>
<script src="/lottery/js/layer/layer.min.js" type="text/javascript" charset="utf-8"></script>

</head>
<body>
	<div id="searchCondition" name="sss">
		<ul>
			<li>页面名称：<input type="text">
			</li>
			<li>页面编码：<input type="text">
			</li>
			<li>是否删除：<select>
					<option value="2">全部</option>
					<option value="0">否</option>
					<option value="1">是</option>
			</select>
			</li>
			<li><input id="cx" type="button" value="查询" height="28px"
				onclick="searchpage(0)"></li>
		</ul>
	</div>
	<div id="funtionList">
		<ul>
			<li><span>新增</span></li>
			<li><span>编辑</span></li>
			<li><span>删除</span></li>
		</ul>
	</div>
	<div id="pageManagerLlist">
		<table id="pageManagerData" style="border-collapse: collapse;">
			<thead>
				<td><input type="checkbox"></td>
				<td>页面ID</td>
				<td>页面名称</td>
				<td>页面编码</td>
				<td>页面url</td>
				<td>是否删除</td>
			</thead>
			<tbody>
				<tr th:each="entries,stat:${dataList}">
					<td><input type="checkbox"></td>
					<td th:text="${entries['id']}"></td>
					<td th:text="${entries['pageName']}"></td>
					<td th:text="${entries['pageCode']}"></td>
					<td th:text="${entries['pageUrl']}"></td>
					<td th:text="${entries['isDel']}"></td> 
				</tr>
			</tbody>
		</table>
	</div>
	<div id="pageLimit">
		<span>首页</span> 
		<span>前页</span> 
		<span>后页</span> 
		<span>尾页</span> 
		<span>第<b>1</b>页</span>
		<span>/共<b>[[${totallNum}]]</b>页</span> 
		<span>
		        到第<input type="text">页
		</span> 
		<span>Go</span>
	</div>
	<script type="text/javascript">
	   //根据条件查询信息
		function searchpage(pageNum) {
			var pageName = $("#searchCondition ul li input:first-child").val();
			var pageCode = $("#searchCondition ul li input:nth-child(2)").val();
			var isDel = $("#searchCondition ul li select option:selected").val();
			$.ajax({
				type : "GET",
				url : "/pageManager/searchBaseAdminPageByCondition",
				data : {
					"pageName" : pageName,
					"pageCode" : pageCode,
					"isDel" : isDel,
					"pageNum" : pageNum
				},
				dataType : "json",
				success : function(data) {
					$('#pageManagerData tbody').empty();
					console.info(data);
					var html = "";
					for (var i = 0, l = data.length; i < l; i++) {
						html += "<tr><td><input type='checkbox'></td>";
						html += "<td>" + data[i]['id'] + "</td>";
						html += "<td>" + data[i]['pageName'] + "</td>";
						html += "<td>" + data[i]['pageCode'] + "</td> ";
						html += "<td>" + data[i]['pageUrl'] + "</td> ";
						html += "<td>" + data[i]['isDel'] + "</td> ";
						html += "</tr>";
					}

					$('#pageManagerData tbody').html(html);
				}
			});

		}　
	   //翻页跳转
	   $("#pageLimit span").click(function(){
		 var textValue =$(this).text();
		 var currentPageNum = $("#pageLimit span:nth-child(5) b").text();
		 var totallPageNum = $("#pageLimit span:nth-child(6) b").text();
		 if(textValue=='首页'){
			 searchpage(0);
			 $("#pageLimit span:nth-child(5) b").text(1)
		 }else if(textValue=='前页'){
		   if(currentPageNum!=1){
			   searchpage(parseInt(currentPageNum)-1);
			   $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)-1)
		   }		 	 
		 }else if(textValue=='后页'){
			 if(currentPageNum!=totallPageNum){
			 searchpage(currentPageNum)
			 $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)+1)
			 }
			 
		 }else if(textValue=='尾页'){
			 if(totallPageNum!=1&&totallPageNum!=currentPageNum){
				 searchpage(totallPageNum-1)
				  $("#pageLimit span:nth-child(5) b").text(totallPageNum)
			 }
			 
		 }else if(textValue=='Go'){
			 var searchNum = $("#pageLimit span:nth-child(7) input").val();
			 if(searchNum!=currentPageNum&&searchNum!=""&&parseInt(searchNum)<=parseInt(totallPageNum)){
				 alert();
				 searchpage(parseInt(searchNum)-1);
				$("#pageLimit span:nth-child(5) b").text(searchNum)
			 }
			 
		 }
	   });
	   
	//全部勾选和反选的js效果
	 $("#pageManagerLlist #pageManagerData thead td input").click(function(){
	 var checkedStatus = $("#pageManagerLlist #pageManagerData thead td input").attr("checked");
	 if(checkedStatus=="checked"){
		 $("#pageManagerLlist #pageManagerData input[type='checkbox']").attr("checked",true);
		 }else{
			 $("#pageManagerLlist #pageManagerData input[type='checkbox']").attr("checked",false); 
			 
		 }
	 })
 //新增，修改，删除弹出框
 $("#funtionList ul li").click(function(){
	 var textValue =$(this).text();
	 if(textValue=="新增"){
		 $.layer({
			 type: 2,
			 title: ["", true],
			 fix: true,
			 end:function(){searchpage(0)},
			 move: true,
			 maxmin: true,
			 shadeClose: false,
			 shade: [0.1, '#000', true],
			 border: [1, 0.8, '#fff', true],
			/*  offset: [($(window).height() - 100) / 2 + 'px', ''], */
			 offset: [30+ 'px', ''],
			 area: [400+ 'px', 260 + 'px'],
			 iframe: { src: "/pageManager/addPagePath" }
		 }); 
	 }else if(textValue=="编辑"){
		 var checknum =$("#pageManagerLlist #pageManagerData tbody td input[type='checkbox']:checked").length
		 if(parseInt(checknum)>parseInt(0)&&parseInt(checknum)<=parseInt(2)){
		  var checkIid =$("#pageManagerLlist #pageManagerData tbody td input[type='checkbox']:checked").parent().next().text();
		 $.layer({
			 type: 2,
			 title: ["", true],
			 fix: true,
			 end:function(){searchpage(0)},
			 move: false,
			 maxmin: true,
			 shadeClose: false,
			 shade: [0.1, '#000', true],
			 border: [1, 0.8, '#fff', true],
			/*  offset: [($(window).height() - 100) / 2 + 'px', ''], */
			 offset: [30+ 'px', ''],
			 area: [400+ 'px', 300 + 'px'],
			 iframe: { src: "/pageManager/updatePagePath?id="+checkIid}
		 }); 
		 } else{
			 alert("请选择一条记录，谢谢！");
		 }
	 }else if(textValue=="删除"){
	 var checknum =$("#pageManagerLlist #pageManagerData tbody td input[type='checkbox']:checked").length
	   if(parseInt(checknum)>parseInt(0)){
		 if(window.confirm('确定要删除选中的'+checknum+'条记录吗？')){
             var idList="-1";
           $("#pageManagerLlist #pageManagerData tbody td input[type='checkbox']:checked").parent().next().each(function(){
        	   idList+=","+$(this).text()
             })
            	$.ajax({
				type : "GET",
				url : "/pageManager/deletePageDataByIds",
				data : {
					"idList" : idList,
				},
				/* dataType : "json", */
				success : function(data) {
				 searchpage(0)
				}
			}); 
              
              
             return true;
          }else{
             //alert("取消");
             return false;
         }
	   }else{
		   alert("请勾选要删除的记录")
	   }
	 }
	 
 })
	   
	</script>
</body>
</html>