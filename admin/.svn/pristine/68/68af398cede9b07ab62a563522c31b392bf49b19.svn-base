</style>

<script src="/lottery/js/jquery-1.8.2.js" type="text/javascript"
	charset="utf-8"></script>
<script src="/lottery/js/layer/layer.min.js" type="text/javascript"
	charset="utf-8"></script>

</head>
<body>
	<div id="searchCondition"
		style="height: 150px; border: 1px solid #BDBFBE; background-color: #F2F2F2">
		<div>
			<span>查询条件</span>
		</div>
		<ul>


			<li>期数：<input type="text">
			</li>
			<li>彩种：<select>
					<option value="0">全部</option>
					<option value="1001">竞彩足球</option>
					<option value="1002">传统足球14场</option>
					<option value="1003">传统足球任选9场</option>
					<option value="1004">竞彩篮球</option>
					<option value="1005">北京单场</option>
					<option value="6">广东11选5</option>
					<option value="11">双色球</option>
					<option value="12">福彩3D</option>
					<option value="13">七乐彩</option>
					<option value="14">大乐透</option>
					<option value="15">七星彩</option>
					<option value="16">排列三</option>
					<option value="17">排列五</option>
			</select>
			</li>
			<li><span onclick="searchMeassages(0)">查询</span></li>
		</ul>
	</div>
	<div
		style="border: 1px solid #BDBFBE; margin-top: 13px; height: 1000px;">
		<div id="messageLlist" style="overflow-x: scroll; width: 1000px;">
			<table id="messageData"
				style="border-collapse: collapse; width: 1488px; table-layout: fixed;">
				<thead>
					<td>操作</td>
					<td>项目名称</td>
					<td>期数编码</td>
					<td>期数名称</td>
					<td>开奖时间</td>
					<td>停止销售时间</td>
					<td>是否有效</td>
					<td>创建时间</td>
					<td>最后修改时间</td>
					<td>高频彩开奖号</td>
				</thead>
				<tbody>
					<tr th:each="entries,stat:${dataList}">
						<td th:attr="idValue=${entries['id']}"><span>编辑</span></td>
						<td th:text="${entries['lotteryName']}"></td>
						<td th:text="${entries['issueno']}"></td>
						<td th:text="${entries['issueName']}"></td>
						<td th:text="${entries['openTimeTow']}"></td>
						<td th:text="${entries['stopTimeTow']}"></td>
						<td th:if="${entries['isValid']}==1">有效</td>
						<td th:if="${entries['isValid']}!=1">无效</td>
						<td th:text="${entries['createTimeTow']}"></td>
						<td th:text="${entries['lastModifyTimeTow']}"></td>
						<td th:text="${entries['winNumber']}"></td>
					</tr>
				</tbody>
			</table>
		</div>
		<div id="pageLimit">
			<span>首页</span> <span>前页</span> <span>后页</span> <span>尾页</span> <span>第<b>1</b>页
			</span> <span>共<b>[[${totallNum}]]</b>页
			</span> <span> 到第<input type="text">页
			</span> <span>Go</span>
		</div>
	</div>
	<script type="text/javascript">
	Date.prototype.format = function (format) {
        var args = {
            "M+": this.getMonth() + 1,
            "d+": this.getDate(),
            "h+": this.getHours(),
            "m+": this.getMinutes(),
            "s+": this.getSeconds(),
            "q+": Math.floor((this.getMonth() + 3) / 3),  //quarter
            "S": this.getMilliseconds()
        };
        if (/(y+)/.test(format))
            format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var i in args) {
            var n = args[i];
            if (new RegExp("(" + i + ")").test(format))
                format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? n : ("00" + n).substr(("" + n).length));
        }
        return format;
    };
	
	
	$(function(){
		init();
	})
	   //根据条件查询信息
		function searchMeassages(pageNum) {
			var issueno = $("#searchCondition ul li:nth-child(1) input").val();
			var lottoid = $("#searchCondition ul li:nth-child(2) select option:selected").val();
	
			$.ajax({
				type : "GET",
				url : "/lottery/lotteryIssue/searchLotteryIssue",
				data : {
					"issueno" : issueno,
					"lottoid" : lottoid,
					"pageNum" : parseInt(pageNum)*10
				},
				dataType : "json",
				success : function(data) {
					if(parseInt(pageNum)==0){
					     $("#pageLimit span:nth-child(5) b").text("1");
						}
					//改变页数
					$("#pageLimit span:nth-child(6) b").text(data.totallNum)
					$('#messageLlist #messageData tbody').empty();
					var html = "";
					for (var i = 0, l = data.dataList.length; i < l; i++) {
						html += "<tr>";
						html += "<td idValue="+data.dataList[i]['id'] +"><span>编辑</span></td>";
						if(null==data.dataList[i]['lotteryName']){
						html += "<td></td>";	
						}else{
						html += "<td>" + data.dataList[i]['lotteryName'] + "</td>";							
						}
						if(null==data.dataList[i]['issueno']){
							html += "<td></td>";	
							}else{
							html += "<td>" + data.dataList[i]['issueno'] + "</td>";							
							}
						if(null==data.dataList[i]['issueName']){
							html += "<td></td>";	
							}else{
							html += "<td>" + data.dataList[i]['issueName'] + "</td>";							
							}
						if(null==data.dataList[i]['openTimeTow']){
							html += "<td></td>";	
							}else{
							html += "<td>" + data.dataList[i]['openTimeTow'] + "</td>";							
							}
						if(null==data.dataList[i]['stopTimeTow']){
							html += "<td></td>";	
							}else{
							html += "<td>" + data.dataList[i]['stopTimeTow'] + "</td>";							
							}
						if("1"==data.dataList[i]['isValid']){
						html += "<td>有效</td>";
						}else{
						html += "<td>无效</td>";
						}
						if(null==data.dataList[i]['createTimeTow']){
							html += "<td></td>";	
							}else{
							html += "<td>" + data.dataList[i]['createTimeTow'] + "</td>";							
							}
						if(null==data.dataList[i]['lastModifyTimeTow']){
							html += "<td></td>";	
							}else{
							html += "<td>" + data.dataList[i]['lastModifyTimeTow'] + "</td>";							
							}
						if(null==data.dataList[i]['winNumber']){
							html += "<td></td>";	
							}else{
							html += "<td>" + data.dataList[i]['winNumber'] + "</td>";							
							}
						html += "</tr>";
					}

					$('#messageLlist #messageData tbody').html(html);
					init() 
				}
			});

		}　
	   //翻页跳转
	   $("#pageLimit span").click(function(){
		 var textValue =$(this).text();
		 var currentPageNum = $("#pageLimit span:nth-child(5) b").text();
		 var totallPageNum = $("#pageLimit span:nth-child(6) b").text();
		 if(textValue=='首页'){
			 searchMeassages(0);
			 $("#pageLimit span:nth-child(5) b").text(1)
		 }else if(textValue=='前页'){
		   if(currentPageNum!=1){
			   searchMeassages(parseInt(currentPageNum)-2);
			   $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)-1)
		   }		 	 
		 }else if(textValue=='后页'){
			 if(currentPageNum!=totallPageNum){
			 searchMeassages(currentPageNum)
			 $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)+1)
			 }
			 
		 }else if(textValue=='尾页'){
			 if(totallPageNum!=1&&totallPageNum!=currentPageNum){
				 searchMeassages(totallPageNum-1)
				  $("#pageLimit span:nth-child(5) b").text(totallPageNum)
			 } 
		 }else if(textValue=='Go'){
			 var searchNum = $("#pageLimit span:nth-child(7) input").val();
			 if(searchNum!=currentPageNum&&searchNum!=""&&parseInt(searchNum)<=parseInt(totallPageNum)){
				 searchMeassages(parseInt(searchNum)-1);
				$("#pageLimit span:nth-child(5) b").text(searchNum)
			 }
		 }
	   });
 
function init() {
  //查看，编辑，作废，有效
 $("#messageLlist table tbody tr td span").click(function(){
	 var textValue =$(this).parent().attr("idValue");
	 if($(this).text()=="编辑"){
		 $.layer({
			 type: 2,
			 title: ["", true],
			 fix: true,
			 end:function(){searchMeassages(0)},
			 move: false,
			 maxmin: true,
			 shadeClose: false,
			 shade: [0.1, '#000', true],
			 border: [1, 0.8, '#fff', true],
			 offset: [($(window).height() - 100) / 2 + 'px', ''], 
			 offset: [30+ 'px', ''],
			 area: [776+ 'px', 460 + 'px'],
			 iframe: { src: "/lottery/lotteryIssue/updatelotteryIssuePath?id="+textValue}
		 }); 
	 }  
 })
} 
	   
	</script>
</body>
</html>