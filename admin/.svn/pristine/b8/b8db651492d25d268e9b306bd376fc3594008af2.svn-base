<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>用户管理</title>
<style type="text/css">
/*初始化页面  */
body, ol, ul, h1, h2, h3, h4, h5, h6, p, th, td, dl, dd, form, fieldset,
	legend, input, textarea, select {
	margin: 0;
	padding: 0
}

body {
	font: 14px "微软雅黑", "Arial Narrow", HELVETICA;
	background: #fff;
	-webkit-text-size-adjust: 100%;
}

a {
	color: #2d374b;
	text-decoration: none
}

a:hover {
	color: #cd0200;
	text-decoration: underline
}

em {
	font-style: normal
}

li {
	list-style: none
}

img {
	border: 0;
	vertical-align: middle
}

table {
	border-collapse: collapse;
	border-spacing: 0
}

p {
	word-wrap: break-word
}
/* 页面css*/
#searchCondition ul li {
	float: left;
	margin-left: 29px;
	margin-top: 35px;
	font-size: 13px;
}

#searchCondition ul li select {
	display: inline-block;
	width: 143px;
	height: 26px
}

#searchCondition ul li input {
	display: inline-block;
	width: 143px;
	height: 22px
}

#searchCondition ul li input#cx {
	display: inline-block;
	width: 80px;
	height: 26px;
	background-color: #5978A6;
	color: white;
	border-radius: 3px;
	box-shadow: none;
}

#messageLlist {
	clear: both;
	margin-left: 29px;
	padding-top: 15px;
}

#messageLlist #messageData td {
	display: inline-block;
	width: 175px;
	text-align: center;
	line-height: 40px;
	border: none;
	border-bottom: 1px;
}

#messageLlist #messageData td:first-child {
	width: 177px;
}

#messageLlist #messageData td:last-child {
	width: 217px;
}

#messageLlist #messageData thead td {
	background-color: #F2F2F2;
}

#messageLlist #messageData tbody tr {
	border-bottom-style: solid;
	border-bottom-width: 1px;
	border-bottom-color: #E7E7E7;
	border-left-style: solid;
	border-left-width: 1px;
	border-left-color: #E7E7E7;
	border-right-style: solid;
	border-right-width: 1px;
	border-right-color: #E7E7E7;
}

#messageLlist #messageData thead tr {
	border-bottom-style: solid;
	border-bottom-width: 1px;
	border-bottom-color: #E7E7E7;
	border-right-style: solid;
	border-right-width: 1px;
	border-right-color: #E7E7E7;
	border-left-style: solid;
	border-left-width: 1px;
	border-left-color: #E7E7E7;
}

#messageLlist #messageData tbody tr:hover {
	background-color: #F2F2F2;
}

#funtionList {
	height: 30px;
	width: 100%;
	clear: both;
	margin-top: 10px;
}

#funtionList ul li {
	float: left;
	display: inline-block;
	height: 26px;
	width: 80px;
	line-height: 26px;
	border: 1px solid #c3adad;
	border-radius: 3px;
	margin-left: 30px;
	text-align: center;
	background-color: #5978A6;
	color: white;
}

#funtionList ul {
	padding-top: 20px;
}

#funtionList ul li:hover {
	cursor: pointer;
}

#funtionList ul li:active {
	background-color: #c3adad;
}

#pageLimit span {
	float: left;
	display: inline-block;
	height: 20px;
	width: 47px;
	line-height: 20px;
	text-align: center;
	border: 1px solid #BDBFBE;
	border-radius: 3px;
	background-color: #159ADD;
	margin-right: 5px;
	color: white;
}

#pageLimit span:active {
	color: black;
	background-color: white;
}

#pageLimit span:hover {
	cursor: pointer;
}

#pageLimit {
	margin-left: 300px;
	margin-top: 20px;
}

#pageLimit span:nth-child(7) {
	width: 80px;
}

#pageLimit span:nth-child(7) input {
	width: 20px;
}

#pageLimit span:nth-child(8) {
	height: 25px;
	width: 50px;
	line-height: 25px;
	border: 1px solid #c3adad;
	border-radius: 3px;
}

#searchCondition ul li span {
	float: left;
	display: inline-block;
	height: 26px;
	width: 80px;
	line-height: 26px;
	border: 1px solid #c3adad;
	border-radius: 3px;
	margin-left: 30px;
	text-align: center;
	background-color: #169CD1;
	color: white;
}

#searchCondition div:first-child {
	height: 51px;
	line-height: 51px;
	margin: 0 7px;
	border-bottom: 3px solid #797979;
	"
}

#searchCondition div:first-child span {
	padding-left: 22px;
}

#functionListTow {
	clear: both;
}

#functionListTow ul li span {
	margin-left: 0px;
}

#searchCondition ul li span:hover {
	cursor: pointer;
}

#searchCondition ul li span:active {
	background-color: white;
	color: black;
}

#messageLlist #messageData tbody tr span {
	float: left;
	display: inline-block;
	height: 20px;
	width: 47px;
	line-height: 20px;
	text-align: center;
	border: 1px solid #BDBFBE;
	border-radius: 3px;
	background-color: #159ADD;
	margin-right: 5px;
	color: white;
	margin-left: 5px;
}

#messageLlist #messageData tbody tr span:nth-child(3) {
	background-color: #FB9900;
}

#messageLlist #messageData tbody tr span:nth-child(4) {
	background-color: #FD9A00;
}

#messageLlist #messageData tbody tr span:hover {
	cursor: pointer;
}

#messageLlist #messageData tbody tr span:active {
	background-color: white;
	color: black;
}

#searchCondition ul li span:hover {
	background-color: #00d9d9;
}

#messageLlist #messageData tbody tr span:hover {
	background-color: #00d9d9;
}

#pageLimit span:hover {
	background-color: #00d9d9;
}
</style>

<script src="/lottery/js/jquery-1.8.2.js" type="text/javascript"
	charset="utf-8"></script>
<script src="/lottery/js/layer/layer.min.js" type="text/javascript"
	charset="utf-8"></script>

</head>
<body>
	<div id="searchCondition"
		style="height: 200px; border: 1px solid #BDBFBE; background-color: #F2F2F2">
		<div>
			<span>管理员查询</span>
		</div>

		<ul>
			<li>用户名称：<input type="text">
			</li>
			<li>用户代码：<input type="text">
			</li>
			<li>用户状态：<select>
					<option value="2">全部</option>
					<option value="0">无效</option>
					<option value="1">有效</option>
			</select>
			</li>

			<li><span onclick="searchMeassages(0)">查询</span><span onclick="add()">新增</span> <span onclick="reSet()">重置</span></li>
		</ul>
	
	</div>
	<div
		style="border: 1px solid #BDBFBE; margin-top: 13px; height: 1000px;">
		<div id="messageLlist" style="overflow-x: scroll; width: 1000px;">
			<table id="messageData"
				style="border-collapse: collapse; width: 921px; table-layout: fixed;">
				<thead>
					<td>操作</td>
					<td>用户名称</td>
					<td>用户代码</td>
					<td>状态</td>
					<td>登记时间</td>
				</thead>
				<tbody>
					<tr th:each="entries,stat:${dataList}">
						<td th:if="${entries['userStatus']==1}"
							th:attr="idValue=${entries['id']}"><span>查看</span><span>编辑</span><span
							style="background-color: #FB9900">作废</span></td>
						<td th:if="${entries['userStatus']==0}"
							th:attr="idValue=${entries['id']}"><span>查看</span><span>编辑</span><span>有效</span></td>
						<td th:if="${entries['userStatus']!=0 and entries['userStatus']!=1 }"
							th:attr="idValue=${entries['id']}"><span>查看</span><span>编辑</span></td>


						<td th:text="${entries['sysUserName']}"></td>
						<td th:text="${entries['sysUserCode']}"></td>
						<td th:if="${entries['userStatus']==1}">有效</td>
						<td th:if="${entries['userStatus']==0}">作废</td>
						<td th:if="${entries['userStatus']!=1 and entries['userStatus']!=0}"></td>
						<td th:text="${entries['regTimeTow']}"></td>

					</tr>


				</tbody>
			</table>
		</div>
		<div id="pageLimit">
			<span>首页</span> <span>前页</span> <span>后页</span> <span>尾页</span> <span>第<b>1</b>页
			</span> <span>共<b>[[${totallNum}]]</b>页
			</span> <span> 到第<input type="text">页
			</span> <span>Go</span>
		</div>
	</div>
	<script type="text/javascript">
	$(function(){
		init();
	})
	 //重置
	  function reSet(){
	  $("#searchCondition ul li input").val("");
	
	  $("#searchCondition ul li:nth-child(3) select").val("2")
	}
	
	   //根据条件查询信息
		function searchMeassages(pageNum) {
			var sysUserName = $("#searchCondition ul li:nth-child(1) input").val();
			var sysUserCode = $("#searchCondition ul li:nth-child(2) input").val();
			var userStatus = $("#searchCondition ul li:nth-child(3) select option:selected").val();
			
			$.ajax({
				type : "GET",
				url : "/lottery/baseAdminUser/searchBaseAdminUser",
				data : {
					"sysUserName" : sysUserName,
					"userStatus" : userStatus,
					"sysUserCode" : sysUserCode,
					"pageNum" : parseInt(pageNum)*10
				},
				dataType : "json",
				success : function(data) {
				
					//改变页数
					if(parseInt(pageNum)==0){
					     $("#pageLimit span:nth-child(5) b").text("1");
						}
					$("#pageLimit span:nth-child(6) b").text(data.totallNum)
					$('#messageLlist #messageData tbody').empty();
					var html = "";
					for (var i = 0, l = data.dataList.length; i < l; i++) {
						html += "<tr>";
						if(data.dataList[i]['userStatus']=="1"){
							   html += "<td idValue="+data.dataList[i]['id']+"><span>查看</span><span>编辑</span><span style='background-color:#FB9900'>作废</span></td>";
								}else if(data.dataList[i]['userStatus']=="0"){
									  html += "<td idValue="+data.dataList[i]['id']+"><span>查看</span><span>编辑</span><span>有效</span></td>";
								}else{
							    html += "<td idValue="+data.dataList[i]['id']+"><span>查看</span><span>编辑</span></td>";
								}
						if(null==data.dataList[i]['sysUserName']){
							html += "<td></td> ";	
							}else{
						html += "<td>" + data.dataList[i]['sysUserName'] + "</td>";
							}
						if(null==data.dataList[i]['sysUserCode']){
							html += "<td></td> ";	
							}else{
								html += "<td>" + data.dataList[i]['sysUserCode'] + "</td>";
							}
						if(data.dataList[i]['userStatus']=="1"){
						html += "<td>有效</td> ";	
						}else if(data.dataList[i]['userStatus']=="0"){
							html += "<td>作废</td> ";
						}else{
						html += "<td></td> ";	
						}
						if(null==data.dataList[i]['regTimeTow']){
							html += "<td></td> ";	
							}else{
								html += "<td>" + data.dataList[i]['regTimeTow'] + "</td>";
							}
						html += "</tr>";
					}
					$('#messageLlist #messageData tbody').html(html);
					init()					
				}
			});
		}　
	   //翻页跳转
	   $("#pageLimit span").click(function(){
		 var textValue =$(this).text();
		 var currentPageNum = $("#pageLimit span:nth-child(5) b").text();
		 var totallPageNum = $("#pageLimit span:nth-child(6) b").text();
		 if(textValue=='首页'){
			 searchMeassages(0);
			 $("#pageLimit span:nth-child(5) b").text(1)
		 }else if(textValue=='前页'){
		   if(currentPageNum!=1){
			   searchMeassages(parseInt(currentPageNum)-2);
			   $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)-1)
		   }		 	 
		 }else if(textValue=='后页'){
			 if(currentPageNum!=totallPageNum){
			 searchMeassages(currentPageNum)
			 $("#pageLimit span:nth-child(5) b").text(parseInt(currentPageNum)+1)
			 }
			 
		 }else if(textValue=='尾页'){
			 if(totallPageNum!=1&&totallPageNum!=currentPageNum){
				 searchMeassages(totallPageNum-1)
				  $("#pageLimit span:nth-child(5) b").text(totallPageNum)
			 }
			 
		 }else if(textValue=='Go'){
			 var searchNum = $("#pageLimit span:nth-child(7) input").val();
			 if(searchNum!=currentPageNum&&searchNum!=""&&parseInt(searchNum)<=parseInt(totallPageNum)){
				 searchMeassages(parseInt(searchNum)-1);
				$("#pageLimit span:nth-child(5) b").text(searchNum)
			 }
			 
		 }
	   });

 //新增
function add(){
	 
	 $.layer({
		 type: 2,
		 title: ["", true],
		 fix: true,
		 end:function(){searchMeassages(0)},
		 move: false,
		 maxmin: true,
		 shadeClose: false,
		 shade: [0.1, '#000', true],
		 border: [1, 0.8, '#fff', true],
		/*  offset: [($(window).height() - 100) / 2 + 'px', ''], */
		 offset: [30+ 'px', ''],
		 area: [450+ 'px', 420 + 'px'],
		 iframe: { src: "/lottery/baseAdminUser/addBaseAdminUserPath" }
	 }); 
 }



function init() {
  //查看，编辑，作废，有效
 $("#messageLlist table tbody tr td span").click(function(){
	 var textValue =$(this).parent().attr("idValue");
	 var reValue = $(this).parent();
	 if($(this).text()=="查看"){
		 $.layer({
			 type: 2,
			 title: ["", true],
			 fix: true,
			 end:function(){searchMeassages(0)},
			 move: false,
			 maxmin: true,
			 shadeClose: false,
			 shade: [0.1, '#000', true],
			 border: [1, 0.8, '#fff', true],
			 offset: [($(window).height() - 100) / 2 + 'px', ''], 
			 offset: [30+ 'px', ''],
			 area: [450+ 'px', 380 + 'px'],
			 iframe: { src: "/lottery/baseAdminUser/baseAdminUserDetailPath?id="+textValue}
		 }); 
	 }else if($(this).text()=="编辑"){
		 $.layer({
			 type: 2,
			 title: ["", true],
			 fix: true,
			 end:function(){searchMeassages(0)},
			 move: false,
			 maxmin: true,
			 shadeClose: false,
			 shade: [0.1, '#000', true],
			 border: [1, 0.8, '#fff', true],
			 offset: [($(window).height() - 100) / 2 + 'px', ''], 
			 offset: [30+ 'px', ''],
			 area: [450+ 'px', 420 + 'px'],
			 iframe: { src: "/lottery/baseAdminUser/updateBaseAdminUserPath?id="+textValue}
		 }); 
		 
	 }else if($(this).text()=="作废"){
			$.ajax({
				type : "GET",
				url : "/lottery/baseAdminUser/updateBaseAdminUser",
				data : {
					"id" : textValue,				
					"userStatus" : 0
				},
				success : function(data) {
                   if("sucess"==data){
                	   reValue.html("<span>查看</span><span>编辑</span><span>有效</span>");
                	   reValue.next().next().next().text("作废");
                   }else{
                	   alert("改变状态失败")
                   }
					init();
				}
			});		 
	 } else if($(this).text()=="有效"){
			$.ajax({
				type : "GET",
				url : "/lottery/baseAdminUser/updateBaseAdminUser",
				data : {
					"id" : textValue,				
					"userStatus" : 1
				},
				success : function(data) {
                   if("sucess"==data){
                	   reValue.html("<span>查看</span><span>编辑</span><span style='background-color:#FB9900'>作废</span>");
                	   reValue.next().next().next().text("有效");
                   }else{
                	   alert("改变状态失败");
                   }
					init();
				}
			});		 
	 }     
 })
}	   
	</script>
</body>
</html>