<body>
	<div id="searchCondition"
		style="height: 273px; border: 1px solid #BDBFBE; background-color: #F2F2F2">
		<div>
			<span>规则编辑</span>
		</div>
		<div>
			<form id="formToUpdate" method="post" action="#"
				enctype="multipart/form-data">
				<table>
					<tr>
						<td>规则名称：</td>
						<td><input type="text"  th:value="${lotteryOrderRoute['ruleName']}"></td>
					</tr>
					<tr>
						<td>彩种种类：</td>
						<td th:if="${lotteryOrderRoute['lottoTypeId']==1}"><input type="radio" name="lotteyType" value="1"
							checked="checked">体彩<input type="radio" name="lotteyType"
							value="2">福彩</td>
							<td th:if="${lotteryOrderRoute['lottoTypeId']!=1}"><input type="radio" name="lotteyType" value="1"
							>体彩<input type="radio" name="lotteyType"
							value="2" checked="checked">福彩</td>
					</tr>
					<tr>
						<td>购彩金额：：</td>
						<td><input type="number" th:value="${lotteryOrderRoute['minOrderPrice']}"> 至<input type="number" th:value="${lotteryOrderRoute['maxOrderPrice']}"></td>
					</tr>

					<tr>
						<td>预计中奖金额：：</td>
						<td><input type="number" th:value="${lotteryOrderRoute['minPayMoney']}"> 至<input type="number" th:value="${lotteryOrderRoute['maxPayMoney']}"></td>
					</tr>

					<tr>
						<td colspan="2"><span onclick="save()">更新</span></td>
					</tr>

				</table>
			</form>
		</div>
		<div id="idValue" hidden="true">[[${lotteryOrderRoute['id']}]]</div>
	</div>
	<div
		style="border: 1px solid #BDBFBE; margin-top: 13px; height: 1000px;">
		<div id="messageLlist">
			<table id="messageData" style="border-collapse: collapse;">
				<thead>
				    <td>选择 </td>
					<td>用户名</td>
					<td>手机号码</td>
						<td>省份</td>
					<td>城市</td>
					<td>区县</td>
				</thead>
				<tbody>
				<tr th:each="entries,stat:${dataList}">
				       <td th:if="${entries['checkRemall']==1}"><input type="checkbox" th:attr="idValue=${entries['id']}" checked="checked"></td>
						<td th:if="${entries['checkRemall']!=1}"><input type="checkbox" th:attr="idValue=${entries['id']}"></td>
						<td th:text="${entries['userCode']}"></td>
						<td th:text="${entries['phone']}"></td>
							<td th:text="${entries['provinceName']}"></td>
						<td th:text="${entries['cityName']}"></td>
						<td th:text="${entries['districtName']}"></td>	
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<script type="text/javascript">
	
	//更新新规则
	function save(pageNum) {
		var id = $("#idValue").text();
		var ruleName = $("#searchCondition table tr:nth-child(1) td input").val();
		var lottoTypeId = $("#searchCondition table tr:nth-child(2) td input:checked").val();
		var minOrderPrice = $("#searchCondition table tr:nth-child(3) td input:nth-child(1)").val();
		var maxOrderPrice = $("#searchCondition table tr:nth-child(3) td input:nth-child(2)").val();
		var minPayMoney = $("#searchCondition table tr:nth-child(4) td input:nth-child(1)").val();
		var maxPayMoney = $("#searchCondition table tr:nth-child(4) td input:nth-child(2)").val();
		var lottoTypeName="体彩";
		if(lottoTypeId==1){
			lottoTypeName="体彩";
		}else{
			lottoTypeName="福彩";
		}
		$("#messageLlist #messageData td input:checked").each(function(){
			idList.push($(this).attr("idValue"))
		})
		var lotteryShopIds = idList.join(',')
		if(ruleName!=null&&ruleName!=''&&lottoTypeId!=null&&lottoTypeId!=''&&minOrderPrice!=null&&minOrderPrice!=''&&maxOrderPrice!=null&&maxOrderPrice!=''&&minPayMoney!=null&&minPayMoney!=''&&maxPayMoney!=null&&maxPayMoney!=''){
			$.ajax({
				type : "GET",
				url : "/lottery/lotteryOrderRoute/updateLotteryOrderRoute",
				data : {
					"id" : id,
					"ruleName" : ruleName,
					"lottoTypeName" : lottoTypeName,
					"lottoTypeId" : lottoTypeId,
					"minOrderPrice" : minOrderPrice,
					"maxOrderPrice" : maxOrderPrice,					
					"minPayMoney" : minPayMoney,
					"maxPayMoney" : maxPayMoney,	
					"lotteryShopIds" : lotteryShopIds	
				},
				success : function(data) {
					if ("sucess" == data) {
						alert("修改成功")
						var index = parent.layer
								.getFrameIndex(window.name);
						parent.layer.close(index);
					} else {
						alert("修改失败，请重新保存，谢谢")
					}
					 
				}
			});
			
		}else{
			alert("请填写规则的信息，谢谢！")
			
		}
  }
	Date.prototype.format = function (format) {
        var args = {
            "M+": this.getMonth() + 1,
            "d+": this.getDate(),
            "h+": this.getHours(),
            "m+": this.getMinutes(),
            "s+": this.getSeconds(),
            "q+": Math.floor((this.getMonth() + 3) / 3),  //quarter
            "S": this.getMilliseconds()
        };
        if (/(y+)/.test(format))
            format = format.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var i in args) {
            var n = args[i];
            if (new RegExp("(" + i + ")").test(format))
                format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? n : ("00" + n).substr(("" + n).length));
        }
        return format;
    };
    
    //保存选择的彩票店主id
    var idList=[];

	 //重置
	  function reSet(){
	  $("#searchCondition ul li input").val("");
	  $("#searchCondition ul li:nth-child(2) select").val("3")
	  }
	  //根据条件查询信息
		function searchMeassages(pageNum) {
			var userCode = $("#searchCondition ul li:nth-child(1) input").val();
			var cityName = idList.join(',')
			$.ajax({
				type : "GET",
				url : "/lottery/lotteryOrderRoute/queryLotteyShopListByIdList",
				data : {
					"userCode" : userCode,
					"cityName" : cityName,
					"pageNum" : parseInt(pageNum)*10
				},
				dataType : "json",
				success : function(data) {
					if(parseInt(pageNum)==0){
					     $("#pageLimit span:nth-child(5) b").text("1");
						}
					//改变页数
					$("#pageLimit span:nth-child(6) b").text(data.totallNum)
					$('#messageLlist #messageData tbody').empty();
					var html = "";
					for (var i = 0, l = data.dataList.length; i < l; i++) {
			
						html += "<tr>";
						html += "<td>" + data.dataList[i]['userCode'] + "</td>";
						html += "<td>" + data.dataList[i]['phone'] + "</td>";
						html += "<td>"+ data.dataList[i]['cityName']+"</td>";
						html += "</tr>";
					}

					$('#messageLlist #messageData tbody').html(html);
					 
				}
			});
	  }
 
	</script>
</body>
