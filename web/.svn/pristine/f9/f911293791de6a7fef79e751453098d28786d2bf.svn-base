<!-- Page, "data-page" contains page name -->
<div class="navbar">
    <div class="navbar-inner">
        <div class="left">
            <a href="view/me.html" class="back">
                <i class="glyphicon glyphicon-menu-left"></i>
            </a>
        </div>
        <div class="center">注册</div>
    </div>
</div>
<div class="page no-toolbar" data-page="user-register">
    <div id="js-pageRegister" class="page-content listBlock inputInfoBlock">
        <div class="list-block">
            <ul>
                <li class="item">
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title">
                                <img src="img/icon/phone.png" style="width: .75rem; height: 1.2rem;" />
                            </div>
                            <div class="item-input">
                                <input type="tel" v-model="paramInfo.phone" placeholder="请输入手机号">
                            </div>
                        </div>
                    </div>
                </li>
                <li class="item">
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title">
                                <i class="glyphicon glyphicon-picture"></i>
                            </div>
                            <div class="item-input">
                                <input type="text" v-model="imgCode" placeholder="请输入图片验证码">
                            </div>
                            <div class="item-after">
                                <img @click="getImgCode" :src="imgSrc" style="height: 1.5rem;" />
                            </div>
                        </div>
                    </div>
                </li>
                <li class="item">
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title">
                                <img src="img/icon/check.png" style="width: .8rem; height: 1.1rem;" />
                            </div>
                            <div class="item-input">
                                <input type="text" v-model="paramInfo.smsCode" placeholder="请输入验证码">
                            </div>
                            <div class="item-after" @click="getSmsCode" v-text="smsTxt"></div>
                        </div>
                    </div>
                </li>

                <li class="item">
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title">
                                <i class="glyphicon glyphicon-headphones"></i>
                            </div>
                            <div class="item-input">
                                <input type="text" v-model="nickName" placeholder="请输入用户昵称">
                            </div>
                        </div>
                    </div>
                </li>

                <li class="item">
                    <div class="item-content">
                        <div class="item-inner">
                            <div class="item-title">
                                <img src="img/icon/pass.png" style="width: 1rem; height: 1rem;" />
                            </div>
                            <div class="item-input">
                                <input type="text" v-model="pwd" placeholder="密码由6-16个数字、字母、英文字母组成">
                            </div>
                        </div>
                    </div>
                </li>

            </ul>
            <div class="list-block-label">
                <label>
                    <input type="checkbox" checked="checked" />已阅读
                    <a>《彩票服务协议》</a>
                </label>
            </div>
        </div>
        <div class="action">
            <div class="row">
                <div class="col-100 theme-pink">
                    <button @click="doAction" class="button button-fill">注册</button>
                </div>
            </div>
        </div>
    </div>
</div>