        <div class="bread">
            <p>
                <span>当前位置：</span>
                <span>多彩缤纷</span>
                <span>></span>
                <span>交易管理></span>
                <span>我的订单</span>
            </p>
        </div>

        <!-- 主要内容 -->
        <div class="main">
            <div class="slider">
                <div class="userInfo">
                    <p>
                        <span>
                            <img :src="userInfo.headImageUrl||'/www/img/img02.png'" />
                        </span>
                        <i v-text="decodeURI(userInfo.nickName)"></i>
                    </p>
                </div>
                <div class="accountInfo">
                    <p class="account">总余额:
                        <strong v-text="userInfo.totalMoney+' 元'"></strong>
                    </p>
                    <p class="account">提现余额:
                        <strong v-text="userInfo.cashMoneyLeft+' 元'"></strong>
                    </p>
                    <p class="account">赠送余额:
                        <strong v-text="userInfo.giftMoneyLeft+' 元'"></strong>
                    </p>
                    <p class="account">冻结金额:
                        <strong v-text="userInfo.lockedMoney+' 元'"></strong>
                    </p>
                    <p class="account">金币：
                        <strong v-text="userInfo.coinNum+' 个'"></strong>
                    </p>
                    <p>
                        <a href="/www/view/user/recharge.html" class="btn btn-danger">充值</a>
                        <a href="/www/view/user/deposit.html" class="btn btn-info">提现</a>
                    </p>
                </div>
                <div class="menuInfo">
                    <p class="label">交易管理</p>
                    <p class="item active">
                        <a href="/www/view/user/order.html">我的彩票</a>
                    </p>
                    <p class="item">
                        <a href="/www/view/user/depRech.html">充值提现明细</a>
                    </p>
                    <p class="item">
                        <a href="/www/view/user/kingBi.html">金币明细</a>
                    </p>
                </div>
                <div class="menuInfo">
                    <p class="label">系统管理</p>
                    <p class="item">
                        <a href="/www/view/user/message.html">站内通知</a>
                    </p>
                </div>
                <div class="menuInfo">
                    <p class="label">个人账户</p>
                    <p class="item">
                        <a href="/www/view/user/info.html">基本资料</a>
                    </p>
                    <p class="item">
                        <a href="/www/view/user/security.html">安全设置</a>
                    </p>
                </div>
            </div>
            <div class="contentWrap">
                <div class="searchWrap">
                    <p class="searchTitle">彩票查询</p>
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <p>下单开始时间：</p>
                                    <p>
                                        <input type="text" v-model="orderParam.beginDay" placeholder="选择下单开始时间" id="starTime" />                                        </p>
                                </td>
                                <td>
                                    <p>下单结束时间：</p>
                                    <p>
                                        <input type="text" v-model="orderParam.endDay" placeholder="选择下单结束时间" id="endTime" />                                        </p>
                                </td>
                                <td>
                                    <p>彩种：</p>
                                    <p>
                                        <select v-model="orderParam.lotteryTypeId">
                                            <option value="">全部</option>
                                            <template v-for="(value, key) in lotterIdList">
                                                <option :value="value" v-text="key"></option>
                                            </template>
                                        </select>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>订单状态：</p>
                                    <p>
                                        <select v-model="orderParam.orderStatus">
                                            <option value="">全部</option>
                                            <template v-for="(value, key) in orderStatuList">
                                                <option :value="key.split('_')[1]" v-text="value"></option>
                                            </template>
                                        </select>
                                    </p>
                                </td>
                                <td>
                                    <p>打单状态：</p>
                                    <p>
                                        <select v-model="orderParam.shopDealStatus">
                                            <option value="">全部</option>
                                            <template v-for="(value, key) in shopDealStatus">
                                                <option :value="key.split('_')[1]" v-text="value"></option>
                                            </template>
                                        </select>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <button @click="getOrderList(true)" class="btn btn-info">搜索</button>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="infoTable">
                    <table>
                        <thead>
                            <tr>
                                <th>下单时间</th>
                                <th>彩种</th>
                                <th>期数</th>
                                <th>购彩金额</th>
                                <th>订单状态</th>
                                <th>奖金</th>
                                <th>订单号</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <template v-for="item in orderList">
                                <tr>
                                    <td>
                                        <p v-text="item.createTime"></p>
                                    </td>
                                    <td>
                                        <p v-text="item.lotteryTypeName"></p>
                                    </td>
                                    <td>
                                        <p v-text="item.issueNo"></p>
                                    </td>
                                    <td>
                                        <p v-text="item.orderPriceStr+'元'"></p>
                                    </td>
                                    <td>
                                        <template v-if="item.orderStatus>4">
                                            <p class="orderStatus" style="background-color:dimgrey;text-align: center; color: white;" v-text="orderStatuList['s_'+item.orderStatus]"></p>
                                        </template>
                                        <template v-if="item.orderStatus==3 && !!item.awardFlag">
                                            <p class="orderStatus" style="background-color:forestgreen;text-align: center; color: white;" v-text="orderStatuList['s_'+item.orderStatus]+'(已开奖)'"></p>
                                        </template>
                                        <template v-if="item.orderStatus==3 && !item.awardFlag">
                                            <p class="orderStatus" style="background-color: #ffd800; color: #333;" v-text="orderStatuList['s_'+item.orderStatus]+'(等待开奖)'"></p>
                                        </template>
                                        <template v-if="item.orderStatus==4">
                                            <p class="orderStatus" style="background-color:forestgreen;text-align: center; color: white;" v-text="orderStatuList['s_'+item.orderStatus]"></p>
                                        </template>
                                        <template v-if="item.orderStatus<3 && item.awardFlag==1">
                                            <p class="orderStatus" style="background-color:dimgrey;text-align: center; color: white;" v-text="orderStatuList['s_'+item.orderStatus]+'(已开奖)'"></p>
                                        </template>
                                        <template v-if="item.orderStatus<3 && item.awardFlag==0">
                                            <p class="orderStatus" style="background-color:red;text-align: center; color: white;" v-text="orderStatuList['s_'+item.orderStatus]"></p>
                                        </template>
                                    </td>
                                    <td>
                                        <p v-text="item.bonusStr+'元'"></p>
                                    </td>
                                    <td>
                                        <p v-text="item.orderCode"></p>
                                    </td>
                                    <td>
                                        <p>
                                            <a :href="'./orderDetail.html?orderCode='+item.orderCode" class="btn btn-info">查看详情</a>
                                        </p>
                                    </td>
                                </tr>
                            </template>

                        </tbody>
                    </table>
                    <div class="pagination">
                        <ul>
                            <li class="previous">
                                <a @click="getPreViewData">
                                    << </a>
                            </li>
                            <template v-for="i in pageCount">
                                <li :class="orderParam.pageNum==i?'active': ''">
                                    <a @click="getByPage(i)" v-text="i"></a>
                                </li>
                            </template>
                            <li class="next">
                                <a @click="getNextData">
                                    >>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
